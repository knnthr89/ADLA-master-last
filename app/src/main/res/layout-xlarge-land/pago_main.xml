<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="22dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.863"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="934dp"
                android:layout_height="219dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="236dp">

                <CheckBox
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="70dip"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:text="Gratuito"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/btn5"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:text="150"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/btn1"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:text="200"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/btn2"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="false"
                    android:text="250" />

                <CheckBox
                    android:id="@+id/btn3"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_gravity="right"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="false"
                    android:text="300"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="217dp"
                    app:layout_constraintBottom_toTopOf="@+id/button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/acprecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Otro precio"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tipopago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Tipo de Pago "
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="200dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarjeta " />


                <TextView
                    android:id="@+id/efectivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:text="Efectivo " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="200dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/starjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/sefectivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="350dp"
                android:layout_marginTop="200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ctarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"

                    />


                <TextView
                    android:id="@+id/cefectivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:text="Cantidad " />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="450dp"
                android:layout_marginTop="180dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTarjeta"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editEfectivo"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="630dp"
                android:layout_marginTop="320dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvregresardinero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se regreso el dinero?" />

                <Switch
                    android:id="@+id/regresardinero_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp" />

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>